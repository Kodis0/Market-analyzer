[Unit]
Description=Market Analyzer Bot + API
After=network.target

[Service]
Type=simple
User=YOUR_USER
WorkingDirectory=/home/YOUR_USER/Market-analyzer
Environment="PATH=/home/YOUR_USER/Market-analyzer/.venv/bin:/usr/bin"
ExecStart=/home/YOUR_USER/Market-analyzer/.venv/bin/python app.py -c config.yaml
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
